<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset name="tournament">
    <field name="id" type="hidden" />

    <field name="title" type="text" label="COM_EXAMPLE_EXAMPLE_TITLE" description="COM_EXAMPLE_EXAMPLE_TITLE_DESC" size="6" class="input-xxlarge" default="" />

		<field	name="place"	 type="text"	label="COM_EXAMPLE_EXAMPLE_PLACE" description="COM_EXAMPLE_EXAMPLE_PLACE_DESC"
			size="20"	class="input-xxlarge"	default="" />

		<field name="mode" type="list" default="0"
			label="COM_EXAMPLE_EXAMPLE_MODE"
			description="COM_EXAMPLE_EXAMPLE_MODE_DESC"
			class="span2 small" >
			<option value="1">COM_EXAMPLE_EXAMPLE_CHAMPIONSHIP</option>
			<option value="2">COM_EXAMPLE_EXAMPLE_LEAGUE</option>
		</field>

		<field name="enabled" type="list" default="0"
			label="COM_EXAMPLE_EXAMPLE_ENABLED"
			description="COM_EXAMPLE_EXAMPLE_ENABLED_DESC"
			class="span2 small" >
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

  </fieldset>
